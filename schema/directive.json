{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Directive",
  "type": "object",
  "properties": {
    "title": {
      "description": "Name of the directive",
      "type": "string"
    },
    "description": {
      "description": "What the directive does",
      "type": "string"
    },
    "commands": {
      "description": "List of all commands available",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "command": {
            "type": "string"
          }
        },
        "required": ["id", "title", "command"]
      }
    }
  },

  "required": ["id", "title", "description", "commands"]
}
